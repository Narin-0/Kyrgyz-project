        </div>
      </div>
      <div class="timeline-item">
        <div class="timeline-content">
          <div class="timeline-date">Правление</div>
          <p>Стал мудрым правителем, объединившим народ и установившим долгий мир.</p>
        </div>
      </div>
    </div>
    
    <button class="tab animate__animated animate__fadeInUp" data-target="manas">Вернуться к Манасу →</button>  
  </section>

  <div class="floating-icon animate__animated animate__bounceIn animate__delay-2s" onclick="window.scrollTo({top: 0, behavior: 'smooth'})">
    ↑
  </div>

  <!-- Скрипт вкладок -->
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const tabs = document.querySelectorAll('.tab-nav button, .tab');
      const sections = document.querySelectorAll('.section');
      
      // Функция для переключения вкладок
      function switchTab(targetId) {
        // Обновляем активные кнопки в навигации
        document.querySelectorAll('.tab-nav button').forEach(btn => {
          btn.classList.toggle('active', btn.dataset.target === targetId);
        });
        
        // Показываем соответствующую секцию
        sections.forEach(sec => {
          sec.classList.toggle('active', sec.id === targetId);
          if(sec.id === targetId) {
            // Анимация элементов при переключении
            const elements = sec.querySelectorAll('h2, p, .hero-image, .fact-box, .character-card, .timeline-item, .tab');
            elements.forEach((el, index) => {
              el.style.animation = '';
              setTimeout(() => {
                el.style.animation = `fadeIn 0.5s ease-out ${index * 0.1}s forwards`;
              }, 10);
            });
          }
        });
        
        // Плавная прокрутка к верху секции
        document.getElementById(targetId).scrollIntoView({
          behavior: 'smooth',
          block: 'start'
        });
      }
      
      // Обработчики для кнопок вкладок
      tabs.forEach(tab => {
        tab.addEventListener('click', () => {
          switchTab(tab.dataset.target);
        });
      });
      
      // Анимация при загрузке
      setTimeout(() => {
        document.body.style.animation = 'none';
      }, 500);
      
      // Показать/скрыть кнопку "Наверх"
      window.addEventListener('scroll', function() {
        const floatingIcon = document.querySelector('.floating-icon');
        if (window.pageYOffset > 300) {
          floatingIcon.style.display = 'flex';
        } else {
          floatingIcon.style.display = 'none';
        }
      });
    });
  </script>

</body>
</html>
